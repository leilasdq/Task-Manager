<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controller.DoingFragment"
    android:background="@drawable/no_item"
    android:layout_margin="8dp">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/doing_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/recycle_background"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/doing_fab"
        style="@style/Widget.Design.FloatingActionButton"
        android:layout_width="72dp"
        android:layout_height="66dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_action_add_menu_icon"
        app:backgroundTint="#2196F3" />

</RelativeLayout>