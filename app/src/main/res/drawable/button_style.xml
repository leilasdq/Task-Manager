<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="20dp"/>
            <stroke android:width="5dp"
                android:color="@color/btn_corner_color"/>
            <solid android:color="@color/btn_clicked_color"/>
        </shape>
        <color android:color="@color/btn_clicked_color"/>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp"/>
            <stroke android:width="5dp"
                android:color="@color/btn_corner_color"/>
            <solid android:color="@color/btn_base_color"/>
        </shape>
        <color android:color="@color/btn_base_color"/>
    </item>
</selector>